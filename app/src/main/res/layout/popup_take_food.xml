<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/p5760"
    android:layout_height="@dimen/p7320"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_order_background"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/p1000"
            android:gravity="center"
            android:text="取餐码取餐"
            android:layout_marginTop="@dimen/p500"
            android:textColor="@color/color_order_text"
            android:textSize="@dimen/p500"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/p1000"
            android:gravity="center"
            android:hint="请输入取餐码"
            android:id="@+id/id_popup_take_text_view_input"
            android:textSize="@dimen/p500"
            />

    </LinearLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="@dimen/p5760"
        android:layout_height="@dimen/p4320"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:orientation="horizontal"
        app:columnCount="4"
        android:layout_row="3"
        >

        <Button
            android:layout_width="@dimen/p1440"
            android:layout_height="@dimen/p1440"
            android:background="@drawable/selector_buttons"
            android:text="7"
            android:textColor="@color/color_order_text"
            android:id="@+id/id_popup_take_btn_7"
            android:textSize="@dimen/p700"
            />

        <Button
            android:layout_width="@dimen/p1440"
            android:layout_height="@dimen/p1440"
            android:background="@drawable/selector_buttons"
            android:text="8"
            android:textColor="@color/color_order_text"
            android:id="@+id/id_popup_take_btn_8"
            android:textSize="@dimen/p700"
            />

        <Button
            android:layout_width="@dimen/p1440"
            android:layout_height="@dimen/p1440"
            android:background="@drawable/selector_buttons"
            android:text="9"
            android:textColor="@color/color_order_text"
            android:id="@+id/id_popup_take_btn_9"
            android:textSize="@dimen/p700"
            />

        <Button
            android:layout_width="@dimen/p1440"
            android:layout_height="@dimen/p1440"
            android:background="@drawable/selector_buttons"
            android:text="0"
            android:textColor="@color/color_order_text"
            android:id="@+id/id_popup_take_btn_0"
            android:textSize="@dimen/p700"
            />

        <Button
            android:layout_width="@dimen/p1440"
            android:layout_height="@dimen/p1440"
            android:background="@drawable/selector_buttons"
            android:text="4"
            android:textColor="@color/color_order_text"
            android:id="@+id/id_popup_take_btn_4"
            android:textSize="@dimen/p700"
            />

        <Button
            android:layout_width="@dimen/p1440"
            android:layout_height="@dimen/p1440"
            android:background="@drawable/selector_buttons"
            android:text="5"
            android:textColor="@color/color_order_text"
            android:id="@+id/id_popup_take_btn_5"
            android:textSize="@dimen/p700"
            />

        <Button
            android:layout_width="@dimen/p1440"
            android:layout_height="@dimen/p1440"
            android:background="@drawable/selector_buttons"
            android:text="6"
            android:textColor="@color/color_order_text"
            android:id="@+id/id_popup_take_btn_6"
            android:textSize="@dimen/p700"
            />
        <Button
            android:layout_width="@dimen/p1440"
            android:layout_height="@dimen/p2880"
            app:layout_rowSpan="2"
            android:background="@drawable/selector_buttons2"
            android:text="清\n除"
            android:textColor="@color/color_white"
            android:id="@+id/id_popup_take_btn_clear"
            android:textSize="@dimen/p700"
            />

        <Button
            android:layout_width="@dimen/p1440"
            android:layout_height="@dimen/p1440"
            android:background="@drawable/selector_buttons"
            android:text="1"
            android:textColor="@color/color_order_text"
            android:id="@+id/id_popup_take_btn_1"
            android:textSize="@dimen/p700"
            />
        <Button
            android:layout_width="@dimen/p1440"
            android:layout_height="@dimen/p1440"
            android:background="@drawable/selector_buttons"
            android:text="2"
            android:textColor="@color/color_order_text"
            android:id="@+id/id_popup_take_btn_2"
            android:textSize="@dimen/p700"
            />
        <Button
            android:layout_width="@dimen/p1440"
            android:layout_height="@dimen/p1440"
            android:background="@drawable/selector_buttons"
            android:text="3"
            android:textColor="@color/color_order_text"
            android:id="@+id/id_popup_take_btn_3"
            android:textSize="@dimen/p700"
            />

    </android.support.v7.widget.GridLayout>

</LinearLayout>

