<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/p10730">
        <com.youth.banner.Banner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_home_banner"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:scroll_time="3000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/p1000"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="@null"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@null"
                android:textColor="@color/colorStar"
                android:textSize="@dimen/p400"
                android:text="推荐星级 : "
                />
            <ImageView
                android:layout_width="@dimen/p410"
                android:layout_height="@dimen/p390"
                android:layout_gravity="center"
                android:src="@drawable/star"
                android:scaleType="fitXY"
                android:id="@+id/id_home_image_view_star_1"
                />
            <ImageView
                android:layout_width="@dimen/p410"
                android:layout_height="@dimen/p390"
                android:layout_gravity="center"
                android:src="@drawable/star"
                android:scaleType="fitXY"
                android:id="@+id/id_home_image_view_star_2"
                />
            <ImageView
                android:layout_width="@dimen/p410"
                android:layout_height="@dimen/p390"
                android:layout_gravity="center"
                android:src="@drawable/star"
                android:scaleType="fitXY"
                android:id="@+id/id_home_image_view_star_3"
                />
            <ImageView
                android:layout_width="@dimen/p410"
                android:layout_height="@dimen/p390"
                android:layout_gravity="center"
                android:src="@drawable/star"
                android:scaleType="fitXY"
                android:id="@+id/id_home_image_view_star_4"
                />
            <ImageView
                android:layout_width="@dimen/p410"
                android:layout_height="@dimen/p390"
                android:layout_gravity="center"
                android:src="@drawable/star"
                android:scaleType="fitXY"
                android:id="@+id/id_home_image_view_star_5"
                android:layout_marginRight="@dimen/p400"
                />
        </LinearLayout>

        <Button
            android:layout_width="@dimen/p1100"
            android:layout_height="@dimen/p1100"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/p3000"
            android:layout_marginRight="@dimen/p1000"
            android:background="@drawable/button_shade"
            android:id="@+id/id_home_button_order"
            android:stateListAnimator="@animator/animator_button_selector"
            />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/p1720"
        android:id="@+id/id_home_recycler_view"
        >
    </android.support.v7.widget.RecyclerView>

    <view.FullVideoView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/id_home_video_view"
        />

</LinearLayout>